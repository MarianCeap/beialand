<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainMenuLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/solomonWallpaperColor"
    tools:context=".activities.LoginActivity">

    <!--Sign in-->
    <ImageView
        android:visibility="invisible"
        android:id="@+id/signUpBackButton"
        android:layout_width="@dimen/dimen12dp"
        android:layout_height="@dimen/dimen12dp"
        android:layout_marginStart="@dimen/dimen2dp"
        android:layout_marginTop="@dimen/dimen2dp"
        android:src="@drawable/back_button"/>
    <ImageView
        android:visibility="visible"
        android:id="@+id/solomonPicture"
        android:layout_width="@dimen/dimen130dp"
        android:layout_height="@dimen/dimen100dp"
        android:layout_marginTop="@dimen/dimen22dp"
        android:src="@drawable/solomon_wallpaper"
        android:layout_gravity="center"
        android:background="@color/transparentColor"/>

    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:id="@+id/usernameLoginCardView"
        android:layout_width="@dimen/dimen80dp"
        android:layout_height="@dimen/dimen18dp"
        android:layout_marginTop="@dimen/dimen12dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen5dp">
        <EditText
            android:id="@+id/usernameLoginEditText"
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="@dimen/dimen20dp"
            android:background="@null"
            android:inputType="text"
            android:hint="username"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:id="@+id/passwordLoginCardView"
        android:layout_width="@dimen/dimen80dp"
        android:layout_height="@dimen/dimen18dp"
        android:layout_marginTop="@dimen/dimen10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen5dp">
        <EditText
            android:id="@+id/passwordLoginEditText"
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="@dimen/dimen20dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="password"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:id="@+id/loginButton"
        android:layout_width="@dimen/dimen80dp"
        android:layout_height="@dimen/dimen18dp"
        android:layout_marginTop="@dimen/dimen10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen5dp"
        app:cardBackgroundColor="@color/gray">
        <TextView
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="@dimen/dimen20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Login"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:visibility="invisible"
        android:id="@+id/feedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen12dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:text="logging in..."/>

    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:id="@+id/guestLoginButton"
        android:layout_width="@dimen/dimen80dp"
        android:layout_height="@dimen/dimen14dp"
        android:layout_marginTop="@dimen/dimen30dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen5dp"
        app:cardBackgroundColor="@color/gray">
        <TextView
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="@dimen/dimen20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17sp"
            android:text="Login as guest"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:visibility="visible"
        android:id="@+id/createAccountText"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="19sp"
        android:text="Create an account"/>

    <!--Sign up-->
    <TextView
        android:visibility="gone"
        android:id="@+id/createAccountTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10dp"
        android:gravity="center"
        android:textSize="22sp"
        android:text="Create a SOLOMON account"/>
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/firstNameSignUpCardView"
        android:layout_width="@dimen/dimen80dp"
        android:layout_height="@dimen/dimen18dp"
        android:layout_marginTop="@dimen/dimen25dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen5dp">
        <EditText
            android:id="@+id/firstNameSignUpEditText"
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="@dimen/dimen20dp"
            android:background="@null"
            android:inputType="textCapWords"
            android:hint="first name"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
    
    <TextView
        android:visibility="invisible"
        android:id="@+id/firstNameFeedbackText"
        android:layout_width="@dimen/dimen70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen2dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="first name not valid"/>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/lastNameSignUpCardView"
        android:layout_width="@dimen/dimen80dp"
        android:layout_height="@dimen/dimen18dp"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen5dp">
        <EditText
            android:id="@+id/lastNameSignUpEditText"
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="@dimen/dimen20dp"
            android:background="@null"
            android:inputType="textCapWords"
            android:hint="last name"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:visibility="invisible"
        android:id="@+id/lastNameFeedbackText"
        android:layout_width="@dimen/dimen70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen2dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="last name not valid"/>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/genderSignUpCardView"
        android:layout_width="@dimen/dimen80dp"
        android:layout_height="@dimen/dimen18dp"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen5dp">
        <Spinner
            android:id="@+id/genderSignUpSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:visibility="invisible"
        android:id="@+id/genderFeedbackText"
        android:layout_width="@dimen/dimen70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen2dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="age not valid"/>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/ageSignUpCardView"
        android:layout_width="@dimen/dimen80dp"
        android:layout_height="@dimen/dimen18dp"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen5dp">
        <EditText
            android:id="@+id/ageSignUpEditText"
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="@dimen/dimen20dp"
            android:background="@null"
            android:inputType="number"
            android:hint="age"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:visibility="invisible"
        android:id="@+id/ageFeedbackText"
        android:layout_width="@dimen/dimen70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen2dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="age not valid"/>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/usernameSignUpCardView"
        android:layout_width="@dimen/dimen80dp"
        android:layout_height="@dimen/dimen18dp"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen5dp">
        <EditText
            android:id="@+id/usernameSignUpEditText"
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="@dimen/dimen20dp"
            android:background="@null"
            android:inputType="text"
            android:hint="username"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:visibility="invisible"
        android:id="@+id/usernameFeedbackText"
        android:layout_width="@dimen/dimen70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen2dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="username not valid"/>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/passwordSignUpCardView"
        android:layout_width="@dimen/dimen80dp"
        android:layout_height="@dimen/dimen18dp"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen5dp">
        <EditText
            android:id="@+id/passwordSignUpEditText"
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="@dimen/dimen20dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="password"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:visibility="invisible"
        android:id="@+id/passwordFeedbackText"
        android:layout_width="@dimen/dimen70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen2dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="password not valid"/>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/passwordConfirmationSignUpCardView"
        android:layout_width="@dimen/dimen80dp"
        android:layout_height="@dimen/dimen18dp"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen5dp">
        <EditText
            android:id="@+id/passwordConfirmationSignUpEditText"
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="@dimen/dimen20dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="password confirmation"
            android:textSize="16sp"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:visibility="gone"
        android:id="@+id/passwordConfirmationFeedbackText"
        android:layout_width="@dimen/dimen70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen2dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="passwords don't match"/>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/signUpButton"
        android:layout_width="@dimen/dimen80dp"
        android:layout_height="@dimen/dimen18dp"
        android:layout_marginTop="@dimen/dimen7dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen5dp"
        app:cardBackgroundColor="@color/gray">
        <TextView
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="@dimen/dimen20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="SignUp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>